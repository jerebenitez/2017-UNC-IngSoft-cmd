<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/boton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/boton2"
        android:layout_weight="1.00"
        android:text="Fecha" />

    <Button
        android:id="@+id/boton2"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:text="\?"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/boton3"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Reservas" />

    <Button
        android:id="@+id/boton4"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/boton3"
        android:layout_toEndOf="@+id/boton3"
        android:text="Mapa" />

    <Button
        android:id="@+id/boton5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/boton4"
        android:layout_toEndOf="@+id/boton4"
        android:text="Borrar Filtros"
        android:textSize="11dp" />

    <Button
        android:id="@+id/boton6"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/boton1"
        android:text="Aula"
        android:textSize="6dp" />

    <Button
        android:id="@+id/boton7"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/boton8"
        android:layout_alignBottom="@+id/boton8"
        android:layout_toEndOf="@+id/boton6"
        android:text="Docente" />

    <Button
        android:id="@+id/boton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boton1"
        android:layout_toEndOf="@+id/boton7"
        android:text="Materia" />

    <Button
        android:id="@+id/boton9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boton1"
        android:layout_toEndOf="@+id/boton8"
        android:text="Modulo"
        android:textSize="13dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/boton3"
        android:layout_alignParentStart="true"
        android:id="@+id/listView"
        android:layout_below="@+id/boton6" />
</RelativeLayout>